/*宽度*/
.w{width:680rpx;margin:0 auto;}
.full{width:100%;}
page {
  width:100%;
overflow-x:hidden;
}
.nav {
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999;
  background: #fff;
  border-bottom: 1px solid #cccccc;
}
 .pr{position: relative;}
.pa{position: absolute;}
.title_text {
  width: 100%;
  height: 15px;
  text-align: center;
  position: absolute;
  bottom: 20px;
  left: 0;
  font-weight: 400;
  z-index: 10;
  font-size: 38rpx;
  letter-spacing: 1px;
  color: #000;
  font-family: pingfang;
}
 
.title_icon {
  position: absolute;
  bottom: 15rpx;
  left: 10rpx;
  border-radius: 70rpx;
  box-sizing: border-box;
  border: 0.5px solid #eaeaea;
  display: flex;
  z-index: 20;
  height: 30px;
}
 .button-hover{ background: inherit;}
.title_icon image {
  display: inline-block;
  overflow: hidden;
  width: 35rpx;
  height: 40rpx;
  padding: 8rpx 23rpx;
  text-align: center;
  background: none;
}
 
.title_icon view {
  height: 18px;
  border-left: 1px solid #eaeaea;
  margin-top: 6px;
}
/*定位*/

.kf_button{
 border: 0px;
 height: 74px;
 right: 10rpx;
 bottom: 0rpx;
 position: fixed;
 background: none;
 padding: 0;
}
.kf_button::after{
 border: 0px;
}
.kf_image{
 z-index: 9999;
 width: 100px;
 height: 74px;
 background: none;
}
/*文字超出省略*/
.ellipsis {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    display: block;
}

/*对齐*/
.tl{text-align: left;}
.tc{text-align: center;}
.tr{text-align: right;}

/*间距*/
.mt5{margin-top: 5rpx;}
.mt10{margin-top: 10rpx;}
.mt15{margin-top: 15rpx;}
.mt20{margin-top: 20rpx;}
.mt25{margin-top: 25rpx;}
.mt30{margin-top: 30rpx;}
.mt35{margin-top: 35rpx;}
.mt40{margin-top: 40rpx;}

/*背景*/
.bg_f{background: #fff}

/*边框*/
.border_t{border-top:solid 1px #eee;}
.border_b{border-bottom: solid 1px #eee;}

/*浮动*/
.fl{float:left;}
.fr{float:right;}

/*弹性盒模型*/
.box {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}
.flex1 {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    box-flex: 1;
    flex: 1;
    overflow: hidden;
    display: block;
}

/*footer*/
.footer_box{height:60px;width:750rpx;line-height: 60px;margin-top:20rpx;}
.footer{font-size: 12px;bottom:0;width:750rpx;}

/*无结果提示*/
.null{margin-top: 100rpx}
.null .txt1{color:#000;font-size:38rpx;margin-top: 20rpx;}
.null .txt2{font-size:30rpx;}

view{
  border: 1px solid #ccc;
}